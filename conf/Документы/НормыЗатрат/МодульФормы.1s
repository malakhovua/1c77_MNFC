Процедура ПроверитьКоличествоПоНормеТМЦ()
	ВыбратьСтроки();
	Пока ПолучитьСтроку() = 1 Цикл
		Если Элемент.Вид() = "ТМЦ" Тогда
			Если НеПересчитыватьКво <> Да Тогда				
				НормаФ = Элемент.НормаКгФарша.Получить(ТекущаяДата());
				Если (НормаФ <> 0) Тогда
					// посчитаем сколько нужно данного ТМЦ
					Если Элемент.СписыватьПриВыпуске.Получить(ТекущаяДата()) = 1 Тогда
						РасчетКво = Окр(?(Элемент.БазаДляНормы = перечисление.БазаДляНормы.Продукция,
						(КвоПродукции - КвоПродукции * ПроцПотерь/100) * НормаФ, //расчет на продукцию
						КвоПродукции * НормаФ),3); //расчет на фарш
						Если РасчетКво<>Кво Тогда
						  Сообщить("Строка - " + Строка(НомерСтроки) + ". " + Строка(Элемент) 
						  + " - пересчитано количество с " + Строка(Кво)  + " на " + Строка(РасчетКво), "!");
						  Кво = РасчетКво;
						КонецЕсли;
					КонецЕсли;
				КонецЕсли;
			КонецЕсли;
		КонецЕсли;	
	КонецЦикла;
КонецПроцедуры

