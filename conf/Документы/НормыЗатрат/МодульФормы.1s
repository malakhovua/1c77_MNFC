Процедура ПечатьКалькуляции()	
	Перем ВыбЗначение; //--- УМК Сандомирский В.Ю, печать с примечаниями (03.06.14)
	
	Варианты = СоздатьОбъект("СписокЗначений");
	Варианты.ДобавитьЗначение(1,"&Печать обычная");
	Варианты.ДобавитьЗначение(2,"Печать с заменой примечанием");
	Варианты.ДобавитьЗначение(3,"&Печать обычная new");
	
	Результат = 0;
	
	Если Варианты.ВыбратьЗначение(ВыбЗначение,"",Результат,3,1) <> 1 Тогда
	    Возврат;
	КонецЕсли; //... УМК Сандомирский В.Ю, печать с примечаниями (03.06.14)
	
	Если Результат = 3 Тогда
		    ПечатьКалькуляции_new(ВыбЗначение);
			Возврат;
	КонецЕсли;
	
	Таб = СоздатьОбъект("Таблица");
	Таб.ИсходнаяТаблица("Таблица");
	Таб.ВывестиСекцию("Шапка");
	
	ПроцентПотерь = Продукция.ПроцПотерь.Получить(РабочаяДата()); //--- УМК Сандомирский В.Ю, процент потерь на рабочую дату (01.07.14)
	НормаРент = Продукция.НормаРент.Получить(ТекущаяДата());	
	Отпускная = Окр(глВернутьЦену(Продукция, Константа.ОсновнаяКатегорияЦен, ТекущаяДата(), Гривня), 2);
	
	Спис = СоздатьОбъект("СписокЗначений");
	Спис.Установить("НормаРент", НормаРент);
	Спис.Установить("Отпускная", Отпускная);
	Спис.Установить("ПроцентПотерь", ПроцентПотерь);
	ОткрытьФормуМодально("Обработка.ДанныеДляКалькуляции", Спис);
	Если Спис.РазмерСписка() > 0 Тогда
		НормаРент = Спис.Получить("НормаРент");
		Отпускная = Спис.Получить("Отпускная");
		ПроцентПотерь = Спис.Получить("ПроцентПотерь");
	КонецЕсли;	
	
	КвоПродукцииП = КвоПродукции - КвоПродукции*(ПроцентПотерь/100);
	
	ИтСтоимость = 0;
	ВыбратьСтроки();
	Пока ПолучитьСтроку() = 1 Цикл
		Если Элемент.Вид() = "ТМЦ" Тогда
			НормаФ = Элемент.НормаКГФарша.Получить(РабочаяДата());
			Если НеПересчитыватьКво = Да Тогда // + umk
				НормаКво = Окр(Кво, 4);
			ИначеЕсли НормаФ <> 0 Тогда
				// + umk
				Если Элемент.СписыватьПриВыпуске.Получить(ДатаДок) = 0 Тогда
					НормаКво = Окр(КвоПродукции * НормаФ, 3);
				Иначе 
					НормаКво = ?(Элемент.БазаДляНормы = Перечисление.БазаДляНормы.Продукция,
					Окр(КвоПродукцииП * НормаФ, 3), //фарш минус потери (продукция)
					Окр(КвоПродукции * НормаФ, 3)); //расчет на фарш
				КонецЕсли;
				// - umk
			Иначе
				НормаКво = Окр(Кво, 4);
			КонецЕсли;
			Стоимость = Цена * НормаКво;
			ИтСтоимость = ИтСтоимость + Стоимость;
			ПечНаименование = СокрЛП(Элемент.ПолнНаименование);
			
			Если ВыбЗначение = 2 Тогда //--- УМК Сандомирский В.Ю, печать с примечаниями (03.06.14)
				ПечНаименование = ПечНаименование + ?(ПустоеЗначение(ПримечаниеСтр)=1,"", " (" + СокрЛП(ПримечаниеСтр) + ")");
			КонецЕсли; //... УМК Сандомирский В.Ю, печать с примечаниями (03.06.14)
			
			Таб.ВывестиСекцию("Строка");		    
		КонецЕсли;
	КонецЦикла;	
	
	ЦенаКГ = Окр(ИтСтоимость / КвоПродукцииП, 2);
	Таб.ВывестиСекцию("ИтогиМатериалы");	
	
	//Заплата =======================================================================
	ПрямаяЗарплата = 0;
	Если ПустоеЗначение(Продукция.СхемаРасчетаЗП) = 0 Тогда
		Таб.ВывестиСекцию("ШапкаЗарплата");
		СхемаЗП = Продукция.СхемаРасчетаЗП.Получить(ДатаДок);
		СхемаЗП.ВыбратьСтроки();
		НомерСтрЗП = 0;
		Пока СхемаЗП.ПолучитьСтроку() = 1 Цикл
			НомерСтрЗП = НомерСтрЗП + 1;
			ВидРабот = СхемаЗП.ВидРабот;
			ВидБазы = СхемаЗП.ВидРабот.База;
			База = ?((СхемаЗП.ВидРабот.База = Перечисление.ТипБазыВР.КвоФарша) ИЛИ (СхемаЗП.ВидРабот.База = Перечисление.ТипБазыВР.Кутера), КвоПродукции, КвоПродукцииП);
			Тариф = ВидРабот.Тариф.Получить(ДатаДок);
			СтоимостьЗП = База*Тариф;
			ПрямаяЗарплата = ПрямаяЗарплата + СтоимостьЗП;
			Таб.ВывестиСекцию("СтрокаЗарплата");
		КонецЦикла;
		Таб.ВывестиСекцию("ЗарплатаИтог");
	КонецЕсли;
	//Конец зарплата ================================================================
	
	ОПЗ = Продукция.ОПР.Получить(ТекущаяДата()); // + umk
     
	ЦенаКГГП = Окр((ИтСтоимость + ПрямаяЗарплата)/ КвоПродукцииП, 2); //в т.ч. прямая зарплата
	ТекВУП = ПолучитьПустоеЗначение("Справочник.ВидыУпаковки");
	СтУпак = глПолучитьСтУпак(Продукция, , ТекущаяДата(), , ТекВУП);
	// + umk
	//СтоимостьКГ = ЦенаКГГП + ОПЗ; //меняем Рагожа И. // 20/01/23
	СтоимостьКГ_ОПЗ = ЦенаКГГП + ОПЗ;
	СтоимостьКГ = ЦенаКГГП ;
	// - umk
	ТекСтоимостьКГ = ?(СтоимостьКГ=0,1,СтоимостьКГ);
	ТекСтоимостьКГ_ОПЗ = ?(СтоимостьКГ_ОПЗ=0,1,СтоимостьКГ_ОПЗ);
	
	//Стоимость ПФ в т.ч. ОПЗ
	Стоимость_КГ_ПФ_ОПР_прямыхЗатрат = 	СтоимостьКГ + ОПЗ;
	
	// + umk
	ПечРентабельность =  ?((СтоимостьКГ*(НормаРент/100) + СтУпак+ОПЗ) =0,0, НормаРент + (((Отпускная/(СтоимостьКГ*(НормаРент/100) + СтУпак+ОПЗ))*100)-100)) ; //Норма рентаб. - минус отношение Отпускной к расчетной цене. (Ира Р.) 
	
	Если Продукция.УровеньПередела.Получить(ДатаДок) > 0 Тогда
		Таб.ВывестиСекцию("СтоимостьПФ");
	Иначе
		Таб.ВывестиСекцию("Итоги");
	КонецЕсли;
	
	Таб.ПараметрыСтраницы(1,,,,,,,,,1);
	Таб.Защита(Константа.ФлагЗащитыТаблиц);
	Таб.ТолькоПросмотр(1);
	Таб.Показать("Калькуляция");
	
КонецПроцедуры

